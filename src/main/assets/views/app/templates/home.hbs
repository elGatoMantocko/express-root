{{#> layouts/default}}
  {{#*inline "content"}}
    <div id="my-carousel" class="carousel slide" data-ride="carousel">
      <ol class="carousel-indicators">
        <li data-target="#my-carousel" data-slide-to="0" class="active"></li>
        <li data-target="#my-carousel" data-slide-to="1"></li>
        <li data-target="#my-carousel" data-slide-to="2"></li>
      </ol>
      <div class="carousel-inner">
        <div class="carousel-item active app-carousel-bg">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-sm col-sm-8">
                <h1 class="display-4 text-center py-sm-5">First slide</h1>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item app-carousel-bg">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-sm col-sm-8">
                <h1 class="display-4 text-center py-sm-5">Second slide</h1>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-item app-carousel-bg">
          <div class="container">
            <div class="row justify-content-center">
              <div class="col-sm col-sm-8">
                <h1 class="display-4 text-center py-sm-5">Third slide</h1>
              </div>
            </div>
          </div>
        </div>
      </div>
      <a class="carousel-control-prev" href="#my-carousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#my-carousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <div class="container pt-sm-5">
      <div class="row justify-content-center">
        <div class="col-sm col-sm-8">
          <h1 class="display-3">Hello World!</h1>
          <p class="lead">Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Duis mollis, est non commodo luctus.</p>
        </div>
      </div>
    </div>
  {{/inline}}
  {{#*inline "more-scripts"}}
  {{/inline}}
{{/layouts/default}}

{{#> layouts/default}}
  {{#*inline "content"}}
    {{#> app/partials/carousel id="my-carousel" slideCount=3 indicators=true control=true}}
      {{#> app/partials/carousel-item id="slide-1" classes="app-carousel-bg active"}}
        <div class="row justify-content-center">
          <div class="col-sm col-sm-12">
            <img src="/static/image5.jpeg" alt="First image" class="app-static-img mx-auto mh-100 d-block">
          </div>
        </div>
      {{/app/partials/carousel-item}}
      {{#> app/partials/carousel-item id="slide-2" classes="app-carousel-bg"}}
        <div class="row justify-content-center">
          <div class="col-sm col-sm-4">
            <img src="/static/image2.jpeg" alt="Second image" class="app-static-img mx-auto align-middle mh-100 d-block">
          </div>
          <div class="col-sm col-sm-4">
            <img src="/static/image1.jpeg" alt="Second image" class="app-static-img mx-auto align-middle mh-100 d-block">
          </div>
          <div class="col-sm col-sm-4">
            <img src="/static/image3.jpeg" alt="Second image" class="app-static-img mx-auto align-middle mh-100 d-block">
          </div>
        </div>
      {{/app/partials/carousel-item}}
      {{#> app/partials/carousel-item id="slide-3" classes="app-carousel-bg"}}
        <div class="row justify-content-center">
          <div class="col-sm col-sm-4">
            <img src="/static/image4.jpeg" alt="Second image" class="app-static-img mx-auto align-middle mh-100 d-block">
          </div>
          <div class="col-sm col-sm-8">
            <img src="/static/image6.jpeg" alt="Second image" class="app-static-img mx-auto align-middle mh-100 d-block">
          </div>
        </div>
      {{/app/partials/carousel-item}}
    {{/app/partials/carousel}}
    <div class="container pt-sm-5">
      <div class="row justify-content-center">
        <div class="col-sm col-sm-8">
          <h1 class="display-3">Rob &amp; Katie</h1>
          <p class="lead">Vivamus sagittis lacus vel augue laoreet rutrum faucibus dolor auctor. Duis mollis, est non commodo luctus.</p>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-sm col-sm-8">
          <div class="app-input-group">
            <input id="my-input-with-float-label" class="float-label form-control" type="email" spellcheck="false" placeholder="hulk@grrrr.com">
            <label for="my-input-with-float-label">Email Address</label>
          </div>
        </div>
      </div>
      <div class="row justify-content-center">
        <div class="col-sm col-sm-8">
          <div class="display-3 d-inline-block mt-3">
            Is it <i class="fa fa-beer text-warning" aria-hidden="true"></i> time?
            <i id="confirm-beer" class="fa" aira-hidden="true"></i>
            <div id="time-container"></div>
          </div>
        </div>
      </div>
    </div>
  {{/inline}}
  {{#*inline "more-scripts"}}
    <script type="text/javascript">App.Presenters.Home();</script>
  {{/inline}}
{{/layouts/default}}
